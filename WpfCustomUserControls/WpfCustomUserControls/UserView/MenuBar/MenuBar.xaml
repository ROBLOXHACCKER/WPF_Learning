<UserControl x:Class="WpfCustomUserControls.UserView.MenuBar.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfCustomUserControls.UserView.MenuBar"
             mc:Ignorable="d" 
                      Height="70" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="File" FontSize="16">
                <MenuItem Header="TUMA"/>
            </MenuItem>
            <MenuItem Name="Exit" Header="Edit" FontSize="16"/>
        </Menu>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6.048"/>
                <ColumnDefinition Width="53.952"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Width="50" Margin="5,5,5,5" Grid.ColumnSpan="2"/>
            <TextBox Grid.Column="2" Width="150" Margin="5,5,5,5"></TextBox>
        </Grid>
    </Grid>
</UserControl>
